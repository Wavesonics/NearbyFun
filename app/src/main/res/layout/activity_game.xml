<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:tools="http://schemas.android.com/tools"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	tools:context="com.darkrockstudios.apps.nearbyfun.GameActivity">
	<EditText
		android:id="@+id/TEST_send_mesage"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:layout_marginTop="8dp"
		app:layout_constraintTop_toBottomOf="@+id/discover_button"
		app:layout_constraintStart_toStartOf="parent"
		android:layout_marginStart="8dp"
		android:layout_marginEnd="8dp"
		app:layout_constraintEnd_toEndOf="parent"/>

	<Button
		android:id="@+id/TEST_send_button"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:text="Send"
		android:layout_marginTop="8dp"
		app:layout_constraintTop_toBottomOf="@+id/TEST_send_mesage"
		app:layout_constraintEnd_toEndOf="parent"
		android:layout_marginEnd="8dp"
		app:layout_constraintStart_toStartOf="parent"
		android:layout_marginStart="8dp"
		android:onClick="onSendClick"/>

	<EditText
		android:layout_width="wrap_content"
		android:layout_height="0dp"
		android:inputType="textMultiLine"
		android:ems="10"
		android:id="@+id/TEST_chat_list"
		android:layout_marginTop="8dp"
		android:enabled="false"
		app:layout_constraintTop_toBottomOf="@+id/TEST_send_button"
		app:layout_constraintEnd_toEndOf="parent"
		android:layout_marginEnd="8dp"
		app:layout_constraintStart_toStartOf="parent"
		android:layout_marginStart="8dp"
		app:layout_constraintBottom_toBottomOf="parent"
		android:layout_marginBottom="8dp"/>
</android.support.constraint.ConstraintLayout>
